<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{id}}" method="post">
                        <div class="form-group p-2">
                            <input type="text" class="form-control" name="title" value="{{title}}" autofocus>
                        </div>
                        <div class="form-group p-2">
                            <input type="url" class="form-control" name="url" value="{{url}}">
                        </div>
                        <div class="form-group p-2">
                            <textarea name="description" rows="2" class="form-control">{{description}}</textarea>
                        </div>
                        <div class="form-group p-2">
                            <button class="btn btn-success w-100">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>